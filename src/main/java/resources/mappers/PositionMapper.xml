<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.bankapplication.persistence.PositionRepository">
    <insert id="create" keyColumn="position_id" keyProperty="positionID" useGeneratedKeys="true">
        INSERT INTO Positions(title)
        VALUES (#{position.title})
    </insert>

    <sql id="positionSelect">
        SELECT
            position_id,
            title
        FROM Positions
    </sql>

    <select id="findById" resultMap="PositionResultMap">
        <include refid="positionSelect"/>
        WHERE position_id = #{id}
    </select>

    <select id="findAll" resultMap="PositionResultMap">
        <include refid="positionSelect"/>
    </select>

    <update id="update">
        UPDATE Positions
            title = #{position.title}
        WHERE position_id = #{position.positionID}
    </update>

    <delete id="deleteById">
        DELETE FROM Positions WHERE position_id = #{id}
    </delete>

    <resultMap id="PositionResultMap" type="com.solvd.bankapplication.domain.Position" autoMapping="false">
        <id column="position_id" property="positionID"/>
        <result column="title" property="title"/>
    </resultMap>
</mapper>